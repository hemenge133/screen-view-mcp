{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/screen-capture-mcp.ts", 
    "src/services/**/*"
  ],
  "exclude": [
    "node_modules", 
    "**/*.test.ts",
    "src/__tests__/**/*",
    "src/test-*.ts",
    "src/test-*.js",
    "src/minimal-mcp.js",
    "src/basic-mcp.js",
    "src/simple-mcp.js",
    "src/working-mcp-server.js",
    "src/mcp-sdk-server.js"
  ]
}